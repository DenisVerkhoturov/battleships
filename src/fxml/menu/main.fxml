<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.menu.Main">

    <children>
        <BorderPane styleClass="content"
                    AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">

            <top>
                <Button onAction="#help" styleClass="top" text="Помощь" BorderPane.alignment="TOP_CENTER"/>
            </top>

            <left>
                <Button onAction="#settings" styleClass="left" text="Настройки" BorderPane.alignment="CENTER_LEFT"/>
            </left>

            <right>
                <Button onAction="#resume" styleClass="right" text="Продолжить" BorderPane.alignment="CENTER_RIGHT"/>
            </right>

            <bottom>
                <Button onAction="#battle" styleClass="bottom" text="Новое сражение"
                        BorderPane.alignment="BOTTOM_CENTER"/>
            </bottom>

        </BorderPane>
    </children>

    <stylesheets>
        <URL value="@../stylesheet.css"/>
    </stylesheets>
</AnchorPane>
