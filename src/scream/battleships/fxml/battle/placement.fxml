<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scream.battleships.controllers.battle.Placement">

    <stylesheets>
        <URL value="@../stylesheet.css" />
    </stylesheets>

    <BorderPane styleClass="content" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <left>
            <Button onAction="#menu" text="Вернуться" BorderPane.alignment="CENTER_LEFT">
                <styleClass>
                    <String fx:value="button" />
                    <String fx:value="left" />
                </styleClass>
                <BorderPane.margin>
                    <Insets left="-75.0" right="-75.0" />
                </BorderPane.margin>
            </Button>
        </left>

        <right>
            <Button onAction="#battle" text="В бой" BorderPane.alignment="CENTER_RIGHT">
                <styleClass>
                    <String fx:value="button" />
                    <String fx:value="right" />
                </styleClass>
                <BorderPane.margin>
                    <Insets left="-75.0" right="-75.0" />
                </BorderPane.margin>
            </Button>
        </right>
      <center>
         <Canvas fx:id="battleground" height="200.0" width="400.0" BorderPane.alignment="CENTER" />
      </center>

    </BorderPane>
</AnchorPane>
